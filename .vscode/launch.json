{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "test",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/ts-mocha",
      "runtimeArgs": ["test/**/*.test.ts"],
      "cwd": "${workspaceRoot}",
      "protocol": "inspector"
    },
    {
      "name": "cli",
      "type": "node",
      "request": "launch",
      "args": ["${workspaceRoot}/src/cli.ts"],
      "runtimeArgs": ["-r", "ts-node/register"],
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "internalConsoleOptions": "openOnSessionStart",
      "env": {
        "TS_NODE_IGNORE": "false"
      }
    }
  ]
}
