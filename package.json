{
  "name": "typescript-documentation",
  "version": "2.0.0",
  "description": "Generate markdown API documentation directly from TypeScript source code",
  "license": "MIT",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "bin": "./lib/cli.js",
  "files": [
    "lib"
  ],
  "engines": {
    "node": ">= 10.0.0"
  },
  "scripts": {
    "start": "ts-node src/cli.ts",
    "lint": "eslint src/**/*.ts test/**/*.ts",
    "typecheck": "tsc --noEmit --project tsconfig.json",
    "test": "ts-mocha test/**/*.test.ts",
    "test:debug": "npm run test -- --inspect",
    "test:coverage": "nyc npm test",
    "clean": "del-cli lib",
    "build:declarations": "tsc --declaration --emitDeclarationOnly --outDir lib --project tsconfig.build.json",
    "build:compile": "babel src --out-dir lib --extensions \".ts\" --ignore \"**/*.test.ts\"",
    "build": "npm run clean && npm run build:declarations && npm run build:compile",
    "prepack": "npm run build",
    "update:dependencies": "npx npm-check-updates -u"
  },
  "keywords": [
    "typescript",
    "documentation",
    "generator",
    "generate",
    "markdown"
  ],
  "repository": "git@github.com:mucsi96/typescript-documentation.git",
  "author": "Igor Mucsicska <mucsi_96@yahoo.com>",
  "dependencies": {
    "commander": "^6.0.0",
    "typescript": "^3.9.7"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.1",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@types/expect": "^24.3.0",
    "@types/mocha": "^8.0.2",
    "@types/node": "^14.0.27",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "cpy-cli": "^3.1.1",
    "del-cli": "^3.0.1",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-mocha": "^8.0.0",
    "expect": "^26.4.0",
    "husky": "^4.2.5",
    "mocha": "^8.1.1",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "rewiremock": "^3.14.3",
    "rimraf": "^3.0.2",
    "ts-mocha": "^7.0.0",
    "ts-node": "^8.10.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
